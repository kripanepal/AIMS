<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.fourofourfound.aims_delivery.settings.SettingsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.fourofourfound.aims_delivery.settings.SettingsFragment">

        <TextView
            android:id="@+id/download_maps"
            style="@style/SettingsMenu"
            android:drawableStart="@drawable/ic_baseline_download_24"
            android:text="Download Maps" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ExtraLightblack_card_color" />

        <TextView
            android:id="@+id/help"
            style="@style/SettingsMenu"
            android:drawableStart="@drawable/ic_baseline_help_outline_24"
            android:text="Help" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ExtraLightblack_card_color" />

        <TextView
            android:id="@+id/about"
            style="@style/SettingsMenu"
            android:drawableStart="@drawable/ic_baseline_about_24"
            android:text="About" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ExtraLightblack_card_color" />

        <TextView
            android:id="@+id/logout_view"
            style="@style/SettingsMenu"
            android:drawableStart="@drawable/ic_baseline_logout_24"
            android:text="Logout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ExtraLightblack_card_color" />

    </LinearLayout>
</layout>