<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="source"
            type="com.fourofourfound.aims_delivery.domain.Source" />

        <variable
            name="fuel"
            type="com.fourofourfound.aims_delivery.domain.Fuel" />

        <variable
            name="quantity"
            type="com.fourofourfound.aims_delivery.domain.Quantity" />


        <variable
            name="clickListener"
            type="com.fourofourfound.aims_delivery.homePage.TripListListener" />
    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{source.fuel.type}"
            app:layout_constraintBottom_toTopOf="@+id/product_quantity"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling" />

           <TextView
               android:id="@+id/product_quantity"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@{source.fuel.quantity.volume}"

               app:layout_constraintBottom_toTopOf="@id/supplier_name"
               app:layout_constraintTop_toBottomOf="@id/product_type"
               tools:ignore="NotSibling" />

            <TextView
            android:id="@+id/supplier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toTopOf="@id/supplier_address"
            app:layout_constraintTop_toBottomOf="@id/product_quantity"
                tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/supplier_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supplier_name" />



</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>