<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Aims_delivery" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Aims_Orange</item>
        <item name="colorPrimaryVariant">@color/Aims_light_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/card_color</item>
        <item name="colorSecondaryVariant">@color/card_background_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

<item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Aims_delivery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>