<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="editTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTint">@color/design_default_color_primary</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SettingsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">@dimen/margin_all_sides_10</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="textColorNormal">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="textSizeDeliveryCompleted">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textColorBlack">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>